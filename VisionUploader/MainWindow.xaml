<Window x:Class="VisionUploader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vision Uploader" Height="175" Width="525" AllowDrop="True" Drop="Grid_Drop" Topmost="True">
    <Window.Resources>
        <Style TargetType="{x:Type ListViewItem}">

            <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>

        </Style>
    </Window.Resources>
    <Grid>
        <Menu>
            <MenuItem x:Name="menuAccount" Header="Account" Click="menuAccount_Click" />
        </Menu>
        <ListView Name="lvFileList" Margin="0,23,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="90" Header="Status" DisplayMemberBinding="{Binding Status}" />
                    <GridViewColumn Width="100" Header="Progress">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                 <ProgressBar Height="20" Maximum="100" Value="{Binding Progress}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="325" Header="FileName" DisplayMemberBinding="{Binding Name}" />
                </GridView>
            </ListView.View>

        </ListView>
    </Grid>
</Window>
